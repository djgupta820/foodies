<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="stylesheet" href="/css/reglog.css">
<title>Register</title>

<div class="fback" style="min-height: 100vh; height: fit-content;">
    <form action="/register" method="post" id="register" class="form">
        <!-- <h1>Admin Register</h1> -->
        <div class="form-field">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-field">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
        </div>
        <div class="form-field">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control">
        </div>
        <div class="form-field">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" name="phone" id="phone" class="form-control">
        </div>
        <div class="form-field">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control">
        </div>
        <div class="ret">
            <input type="checkbox" name="retailer" id="retailer">
            <label for="retailer">Register as retailer</label>
            <span>(* if you are a consumer then don't check this.)</span>
        </div>
        <button class="btn">Register</button>
    </form>
    <div class="user-check">
        <p>Already have an account? <a href="/login"> Click here</a> to login</p>
    </div>
</div>

<script src="/js/reglog.js"></script>