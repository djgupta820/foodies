<% layout('layout/boilerPlate') %>

    <section class="container">
        <h1>Add New Item</h1>
        <form action="/products/new" method="post" enctype="multipart/form-data" style="border: 0.1em solid lightgray; padding: 1rem; border-radius: 8px;" id="additem">
            <div class="form-group my-2">
                <label for="name">Item Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Briyani" style="text-transform: capitalize;">
            </div>
            <div class="form-group my-2">
                <label for="category">Category</label>
                <input type="text" class="form-control" name="category" id="category" style="text-transform: capitalize;">
            </div>
            <div class="form-group my-2">
                <label for="price">Price</label>
                <input type="number" class="form-control" name="price" id="price">
            </div>
            <div class="form-group my-4">
                <label for="image">Upload Image</label>
                <input type="file" class="mx-5 form-control-file" name="image" id="image">
            </div>
            <div class="form-group my-2">
                <label for="description">Description</label>
                <textarea class="form-control" name="description" rows="4" id="description" style="resize: none;"></textarea>
            </div>
            <button class="m-3 px-5 btn btn-outline-success">Add</button>
        </form>
    </section>
    <script src="/js/additem.js"></script>